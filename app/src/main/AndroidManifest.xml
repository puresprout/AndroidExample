<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidExample">
        <activity
            android:name=".gestures.GesturesActivity"
            android:exported="false"
            android:label="@string/title_activity_gestures"
            android:theme="@style/Theme.AndroidExample" />

        <service
            android:name=".service.LogService"
            android:enabled="true"
            android:exported="false"
            android:process=":logger" />

        <activity
            android:name=".service.ServiceActivity"
            android:exported="false"
            android:label="@string/title_activity_service"
            android:theme="@style/Theme.AndroidExample" />

        <service
            android:name=".service.CountService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AndroidExample">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".flow.FlowActivity"
            android:exported="false"
            android:theme="@style/Theme.AndroidExample" />
    </application>

</manifest>